<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cv_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="0dp">

    <android.support.constraint.ConstraintLayout
        style="@style/CardView.Main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless">

        <TextView
            android:id="@+id/tv_field_name"
            style="@style/TextView.Hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text="Название"/>

        <TextView
            android:id="@+id/tv_field_value"
            style="@style/TextView.Main.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/tv_field_name"
            tools:text="Значение"/>

        <TextView
            android:id="@+id/tv_field_timer"
            style="@style/TextView.Hint"
            android:layout_width="32dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_field_value"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_field_name"
            tools:text="30"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>